{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "out",
    "sourceMap": true,
    "target": "esnext",
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}